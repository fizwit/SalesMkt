%  John Dey Square Logo for Wegsite use
%
%
%  Defines
/in { 72 mul } bind def

% usage: [x] [y] <text lable> <barcode> makelabel
/width { 3.5 in } bind def
/TextWidth { 3 in } def

%
%  Height is Logo Height only
/height { 3.5 72 mul } bind def
/halfH { height 2 div } bind def
/quarter { height 4 div } bind def


/center {
    %% inputs: string
    %% side effects: shiftX (ammount shift to allow string width to be centered on <width>
    /MyString exch def 
    /cWid MyString stringwidth pop def
    /shiftX width cWid sub 2 div def
} def

/kern2width {
    %% inputs Global: <with> and <TextWidth>
    %% inputs arguments: <string> <MyWidth>
    %% side effects: kernX amount to kern to make <string> fit <width>
    %%     shiftX: center based on <width>
    /MyWidth exch def
    /MyString exch def 
    /NumChars MyString length 1 sub def /cWid MyString stringwidth pop def
    /kernX MyWidth cWid sub NumChars div def
    /newWid kernX NumChars mul cWid add def
    /shiftX width newWid sub 2 div def
} def

/kernNcenter {
    %% inputs: string
    %% side effects: shiftX (shift ammount to allow string width to be centered on <width>
    %%               and fit into <TextWidth>
    /MyString exch def 
    /NumChars MyString length 1 sub def /cWid MyString stringwidth pop def
    /kernX TextWidth cWid sub NumChars div def
    /newWid kernX NumChars mul cWid add def
    /shiftX width newWid sub 2 div def
} def

/box {
  % re-factor to make x y upper left
  /y exch def
  /x exch def
  % outer Box
  x y moveto
  1 setlinewidth
  width  0   rlineto 
  0 height neg rlineto
  width neg 0  rlineto
  closepath stroke
  % Lower black box "Photography"
  x y height sub moveto
  0 height 2 div rlineto
  width 0 rlineto 
  0 height 2 div neg rlineto fill
  %

/Helvetica findfont 72 scalefont setfont
1 setgray
(graphy) kernNcenter 
x y height sub moveto shiftX 18 rmoveto  %Lower left + 40 right [down 10]
{ kernX 0 rmoveto } (graphy) kshow

(Photo) kernNcenter 
x y height quarter sub sub moveto shiftX 6 rmoveto  %Lower left   +10 + 10
{ kernX 0 rmoveto } (Photo) kshow


/Helvetica-Bold findfont 68 scalefont setfont
/TextWidth { 2.5 in } def
0 setgray
(John) center 
x y quarter sub moveto shiftX 8 rmoveto  %Lower left   % down 8 right 20
(John) show

(Dey) cWid kern2width
x y halfH sub moveto shiftX 18 rmoveto  %Lower left   right 30
{ kernX 0 rmoveto } (Dey) kshow

} def


