%  John Dey Photography Gallery Stamp
%  Four stamps per sheet
%
%  To be used to label photographs. Place on back of matted prints.
%  Title, Edition, Date, Signature

%  Defines
/in { 72 mul } bind def

% Logo Size; Width and Height
/LogoWid { 3.75 in} bind def
/height { 1.72 in} bind def
/LogoHgt { 4 in } bind def
% <TextWidth> width of Text inside Logo

%  Height of text box
/textH { 1.75 72 mul } bind def
% Half Height of text box
/halfH { height 2 div } bind def

/kernNcenter {
    %% Set type at current position. calculate kerning to fill space
    %% <TextWidth>. Kerning can be positive or negative
    %% inputs: string
    %% <shiftX> (shift ammount to allow string width to be
    %%   centered on <LogoWid> and fit into <TextWidth>
    %% <kernX> kern amounted needed for kshow, for fitting text
    %%   into <TextWidth>
    /MyString exch def
    /NumChars MyString length 1 sub def /cWid MyString stringwidth pop def
    /kernX TextWidth cWid sub NumChars div def
    /newWid kernX NumChars mul cWid add def
    /shiftX LogoWid newWid sub 2 div def
    shiftX baseLine rmoveto
    {kernX 0 rmoveto } MyString kshow
} def

%------ try not to change anything below -----
/logo {
  % re-factor to make x y upper left
  /y exch def
  /x exch def
  % outer Box
  x y moveto
  1 setlinewidth
  0 setgray
  LogoWid  0   rlineto
  0 LogoHgt neg rlineto
  LogoWid neg 0  rlineto
  closepath stroke
  % Lower black box "Photography"
  x y textH sub moveto
  0 textH 2 div rlineto
  LogoWid 0 rlineto
  0 textH 2 div neg rlineto fill
  %
  % draw a few lines below the logo
  .5 setlinewidth
  /lineheight 40.5 def
  x 12 add     y textH sub lineheight sub moveto
  LogoWid 24 sub 0 rlineto closepath stroke
  x 12 add     y textH sub lineheight 2 mul sub moveto
  LogoWid 24 sub 0 rlineto closepath stroke
  x 12 add     y textH sub lineheight 3 mul sub moveto
  LogoWid 24 sub 0 rlineto closepath stroke

  0 setgray
  /Helvetica-Bold findfont 50 scalefont setfont
  /Helvetica-Bold findfont 50 scalefont setfont
  /baseLine 16 def

  /TextWidth { 3.45 in } def
0 setgray
x y halfH sub moveto %Lower left
(John Dey) kernNcenter

/Helvetica findfont 50 scalefont setfont
x y textH sub moveto 8 baseLine rmoveto  %Lower left
1 setgray
{ -3.5 0 rmoveto } (Photography) kshow

} def

