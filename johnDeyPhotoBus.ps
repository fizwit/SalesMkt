%  8.5 in = 612 pt
%  11 in = 792 pt
%
%  Defines

/in { 72 mul } bind def

% usage: x y tick
/tick {
  .5 setlinewidth
  0 setgray
  6 sub moveto
  0 12 rlineto 
  gsave stroke grestore
  -6 -6 rmoveto
  12 0 rlineto stroke
} def

/kernNcenter {
    %% Set type at current position. calculate kerning to fill space
    %% <TextWidth>. Kerning can be positive or negative
    %% argument: string
    %% <shiftX> (shift ammount to allow string width to be
    %%   centered on <LogoWid> and fit into <TextWidth>
    %% <kernX> kern amounted needed for kshow, for fitting text
    %%   into <TextWidth>
    /MyString exch def
    /NumChars MyString length 1 sub def /cWid MyString stringwidth pop def
    /kernX TextWidth cWid sub NumChars div def
    /newWid kernX NumChars mul cWid add def
    /shiftX LogoWid newWid sub 2 div def
    shiftX baseLine rmoveto
    {kernX 0 rmoveto } MyString kshow
} def

% Print logo box and text
% [x] [y] [width] [height] are inputs
% x y are lower left of logo box
% width height are box boundrys
/logo {
  % Draw logo box
  /y exch def
  /x exch def
  /dx x .25 in add def
  /dy y 2 in height sub 2 div add def
  /half height 2 div def
  /baseline half .24 mul def
  /skip width .05 mul def
  /halfskip skip 2 div def
  1 setlinewidth
  0 setgray
  dx dy moveto
  width  0   rlineto 
  0 height   rlineto
  width neg  0  rlineto
  closepath stroke
  dx dy moveto
  0 half  rlineto
  width 0 rlineto 
  0 half neg rlineto fill
  % Draw logo Text
    /baseLine 12 def
    /Helvetica-Bold findfont half .85 mul scalefont setfont
    % Top
      /TextWidth 2.5 in def
      0 setgray
      dx dy half add moveto
      (John Dey) kernNcenter 

    % Bottom
    /Helvetica findfont half .85 mul scalefont setfont
      dx dy moveto
      1 setgray
      /kern width (Photography) stringwidth pop sub skip sub 11 div def 
      halfskip kern add baseline rmoveto
      { kern 0 rmoveto } (Photography) kshow
    0 setgray
    % Phone number
    save
    /Courier findfont 12 scalefont setfont
    %x 3.5 in add y 1 in add tick 
    x 3.15 in add y 1 in add moveto
    90 rotate
    (johndey.com) dup  stringwidth pop 2 div neg 0 rmoveto show
    restore
} def


/width 2.75 in def
/LogoWid 2.75 in def
/height 1.25 in def
/x1 .75 in def /x2 4.25 in def /x3 7.75 in def
/y .5 in def
x1 y logo
/drawCards{
  5 {
    x1 y tick x2 y tick x3 y tick
    x1 y logo x2 y logo 
    /y y 2 in add def
  } repeat 
  x1 y tick x2 y tick x3 y tick
} def
drawCards


showpage
