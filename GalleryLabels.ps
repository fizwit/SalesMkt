%!PS
%%Title: John Dey Photo Biz Card 
%%Creator: John Dey 2000
%%Creator: Michael D. Mazzone
%%CreationDate: Apr. 24, 1995
%%EndComments

%  8.5 in = 612 pt
%  11 in = 792 pt
%
%  Defines

/in { 72 mul } bind def

% usage: x y tick
/tick {
  .5 setlinewidth
  0 setgray
  6 sub moveto
  0 12 rlineto 
  gsave stroke grestore
  -6 -6 rmoveto
  12 0 rlineto stroke
} def

% Print logo box and text
% [x] [y] [width] [height] are inputs
% x y are lower left of logo box
% width height are box boundrys

/logo {
  logoBox
  logoText
} def

/text {
  TextBox
  GalleryText
} def

/TextBox {
  /y exch def
  /x exch def
  /dx x .25 in add def
  /dy y 2 in height sub 2 div add def
  /half height 2 div def
  /baseline half .24 mul def
  /skip width .05 mul def
  /halfskip skip 2 div def
  1 setlinewidth
  0 setgray
  dx dy moveto
  width  0   rlineto
  0 height   rlineto
  width neg  0  rlineto
  closepath stroke
} def


/GalleryText {
  /L1 exch def
  /L2 exch def
  /L3 exch def
  /Helvetica findfont 14 scalefont setfont
  0 setgray
  /dx x .25 in add 10 add def
  /dy y 2 in height sub 2 div add height add TextY sub def
  dx dy moveto
  L1 show
  /dy dy TextY sub def
  dx dy moveto
  L2 show
  /dy dy TextY sub def
  dx dy moveto
  L3 show
} def

/logoText {
  % Draw logo Text
  /Helvetica findfont half .85 mul scalefont setfont
    % Top
      0 setgray
      dx dy moveto
      /kern width (John Dey) stringwidth pop sub skip sub 8 div def 
      halfskip  half baseline add rmoveto
    { kern 0 rmoveto } (John Dey) kshow
    % Bottom
      dx dy moveto
      1 setgray
      /kern width (Photography) stringwidth pop sub skip sub 11 div def 
      halfskip kern add baseline rmoveto
      { kern 0 rmoveto } (Photography) kshow
    %% Phone number
    %save
    %0 setgray
    %/Courier findfont 12 scalefont setfont
    %%x 3.5 in add y 1 in add tick 
    %x 3.15 in add y 1 in add moveto
    %90 rotate
    %(360.649.2731) dup  stringwidth pop 2 div neg 0 rmoveto show
    %restore
} def

% Draw logo box
/logoBox {
  /y exch def
  /x exch def
  /dx x .25 in add def
  /dy y 2 in height sub 2 div add def
  /half height 2 div def
  /baseline half .24 mul def
  /skip width .05 mul def
  /halfskip skip 2 div def
  1 setlinewidth
  0 setgray
  dx dy moveto
  width  0   rlineto 
  0 height   rlineto
  width neg  0  rlineto
  closepath stroke
  dx dy moveto
  0 half  rlineto
  width 0 rlineto 
  0 half neg rlineto fill
} def

%% Logo Size 
/width 3.00 in def
/height 1.5 in def
/TextY 16 def

%% Position on Paper
/x1 .75 in def /x2 4.25 in def /x3 7.75 in def
/y .5 in def
x1 y logo
/drawCards{
    x1 y tick x2 y tick x3 y tick
    x1 y logo (John Dey)("Getty Center Curves")(Geletin Silver Print) x2 y text 
    /y y 2 in add def

    x1 y tick x2 y tick x3 y tick
    x1 y logo (John Dey)("Getty Center Angels")(Geletin Silver Print) x2 y text 
    /y y 2 in add def

    x1 y tick x2 y tick x3 y tick
    x1 y logo (John Dey)("Getty Center Curves")(Geletin Silver Print) x2 y text 
    /y y 2 in add def

    x1 y tick x2 y tick x3 y tick
    x1 y logo (John Dey)("Getty Center Angels")(Geletin Silver Print) x2 y text 
    /y y 2 in add def

    x1 y tick x2 y tick x3 y tick
    (John Dey)("Carriage House")(West Malling England) x1 y text 
    (John Dey)("Carriage House")(West Malling England) x2 y text 
    /y y 2 in add def
  x1 y tick x2 y tick x3 y tick
} def
drawCards


showpage
